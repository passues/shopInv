{
  "name": "shop-inventory-tracker",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "railway:deploy": "npm run build",
    "db:migrate": "prisma db push && tsx prisma/seed-automated.ts",
    "deploy:prod": "prisma db push --accept-data-loss && tsx prisma/seed-automated.ts && npm start"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "cheerio": "^1.0.0-rc.12",
    "lucide-react": "^0.400.0",
    "next": "14.2.5",
    "node-cron": "^3.0.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8",
    "prisma": "^5.15.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5"
  }
}
